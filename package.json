{
  "name": "real-time-pulse",
  "version": "1.0.0",
  "description": "Real-Time Pulse - Enterprise Dashboard Platform",
  "private": true,
  "workspaces": [
    "backend-nest",
    "frontend",
    "e2e"
  ],
  "scripts": {
    "prepare": "husky install",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend-nest && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend-nest && npm test",
    "test:frontend": "cd frontend && npm test",
    "typecheck": "npm run typecheck:backend && npm run typecheck:frontend",
    "typecheck:backend": "cd backend-nest && tsc --noEmit",
    "typecheck:frontend": "cd frontend && tsc --noEmit",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend-nest && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend-nest && npm run start:dev",
    "dev:frontend": "cd frontend && npm run dev",
    "db:migrate": "cd backend-nest && npx prisma migrate deploy",
    "db:generate": "cd backend-nest && npx prisma generate",
    "db:seed": "cd backend-nest && npx prisma db seed",
    "clean": "rm -rf backend-nest/node_modules frontend/node_modules e2e/node_modules node_modules",
    "preinstall": "npx only-allow npm"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1"
  },
  "lint-staged": {
    "backend-nest/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "frontend/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "resolutions": {
    "@apollo/server": "^5.2.0"
  }
}
